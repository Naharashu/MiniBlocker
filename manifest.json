{
    "name": "Mini AdBlocker",
    "version": "2.1.0",
    "description": "Simple and fast AdBlocker + block .ru domains",
    "permissions": [
        "storage",
        "notifications", 
        "webRequest", 
        "webRequestBlocking", 
        "declarativeNetRequest", 
        "activeTab", 
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/logo1.png",
            "48": "icons/logo2.png",
            "128": "icons/logo3.png"
        }
    },
    "icons": {
        "16": "icons/logo1.png",
        "48": "icons/logo2.png",
        "128": "icons/logo3.png"
    },
   "options_page": "options.html",
    "manifest_version": 2
}